<div class="dialog-overlay" id="dialog">
    <div class="dialog-line">M: Ej, kurna, co robimy z tym ślubem?</div>
    <div class="dialog-line">K: Ja bym mogła wziąć z Tobą ślub, ale w lesie.</div>
    <div class="dialog-line">M: O. Dobra.</div>
    <div class="dialog-line">Także ten</div>
    <button class="next-button" id="nextBtn">→ Zobacz co dalej</button>
</div>

<img src="zaproszenie.jpg" alt="Zaproszenie" class="invite" id="inviteImage">

<script>
    const dialogLines = document.querySelectorAll('.dialog-line');
    const nextBtn = document.getElementById('nextBtn');
    const invite = document.getElementById('inviteImage');

    let currentLine = 0;

    function showNextLine() {
        if(currentLine < dialogLines.length) {
            dialogLines[currentLine].classList.add('show');
            currentLine++;
            setTimeout(showNextLine, 1200); // czas między linijkami (1.2s)
        } else {
            nextBtn.style.display = 'inline-block';
        }
    }

    // Start animacji po załadowaniu strony
    window.addEventListener('load', () => {
        showNextLine();
    });

    nextBtn.addEventListener('click', () => {
        document.getElementById('dialog').style.display = 'none';
        invite.classList.add('show');
    });
</script>

</body>
