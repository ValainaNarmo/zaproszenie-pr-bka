    }
    .dialog-line {
        margin-bottom: 20px;
        opacity: 0;
        transition: opacity 0.6s ease;
    }
    .dialog-line.show {
        opacity: 1;
    }
    .next-button {
        font-size: 1.2em;
        padding: 10px 20px;
        border: 2px solid white;
        border-radius: 30px;
        background: rgba(255,255,255,0.1);
        color: white;
        cursor: pointer;
        transition: background 0.3s, transform 0.3s;
